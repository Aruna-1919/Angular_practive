import { Component } from '@angular/core';
import { Router } from '@angular/router';
import { meals } from 'src/meals';

@Component({
  selector: 'app-dietplan',
  templateUrl: './dietplan.component.html',
  styleUrls: ['./dietplan.component.css']
})
export class DietplanComponent {
  constructor(private router:Router){}
  meals=[...meals];
  viewMealDetails(mealId:number){
  const meal=meals.find(m=>m.id==mealId);
  this.router.navigate(['/plandetail',mealId],{
    
  })


  }

}
----
<div class="container">
    <h1>Meal Details</h1>
    <h2>{{meal.name}} </h2>
    <p>{{meal.descrption}}</p>
    <p>{{meal.calories}} </p>
    <p>{{meal.protein}} </p>

</div>

import { Injectable } from '@angular/core';
import {Observable} from 'rxjs';                 

import {HttpClient} from '@angular/common/http';
import { Patient } from '../model/patient.model';

@Injectable({
  providedIn: 'root'
})
export class PatientService {

  constructor(private http:HttpClient) { }
  backendUrl:string="https://ide-ceddcdabc336132943aaeddbcbfbfone.premiumproject.examly.io/proxy/3001/patients"; 
  getPatients():Observable<Patient[]>{
    return this.http.get<Patient[]>(this.backendUrl); 
  }
  addPatient(patient:Patient):Observable<Patient>{
    return this.http.post<Patient>(this.backendUrl,patient);     
  }
  deletePatient(patientId:number):Observable<void>{
    return this.http.delete<void>(`${this.backendUrl}/${patientId}`);

  }

 
} 

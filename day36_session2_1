import { Component } from '@angular/core';
import { BlogService } from '../services/blog.service';
import { Observable } from 'rxjs';

@Component({
  selector: 'app-bloglist',
  templateUrl: './bloglist.component.html',
  styleUrls: ['./bloglist.component.css']
})
export class BloglistComponent {
  constructor(private blogService:BlogService){} 
  blogs:any[];
  editBlog:any;
  ngOnInit(){
   this.getBlogs();

  
  }
  getBlogs(){
    this.blogService.getBlogs().subscribe(data=>
      {
        this.blogs=data;
      });
    
  }
  deleteBlog(id){
    this.blogService.deleteBlog(id).subscribe(data=>{
      this.getBlogs();
    });

  }
  updateBlog(blog){
    this.editBlog=blog;
  }
  saveBlog(){
    this.blogService.updateBlog(this.editBlog.id,this.editBlog).subscribe(data=>{
     this.getBlogs();
    this.editBlog=null;
    });
    
  }
  cancelEdit(){
    this.editBlog=null;
  }


}
----------------------------------
import { Injectable } from '@angular/core';
import { Observable ,of} from 'rxjs';

@Injectable({
  providedIn: 'root'
})
export class BlogService { 


  constructor() { }
  blogs:any[]=[];
  getBlogs():Observable<any>{
    return of(this.blogs);   
  }
  addBlog(blog):Observable<any>{
    this.blogs.push(blog);
    return of(blog);

  }
  deleteBlog(id):Observable<any>{
    for(let i=0;i<this.blogs.length;i++){
      if(this.blogs[i].id==id){
        this.blogs.splice(i,1);
      }

    }
    return of({id:id});

  }
  updateBlog(id,blog):Observable<any>{
    for(let i=0;i<this.blogs.length;i++){
      if(this.blogs[i].id==id){
        this.blogs[i]=blog;
      }
    }
    return of(blog);


  }

}

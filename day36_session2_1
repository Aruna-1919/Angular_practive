<h1>BlogApp</h1>
<form #form="ngForm" (ngSubmit)="addBlog()">
<input type="text" placeholder="enter title" [(ngModel)]="blog.title" name="title" id="title"/>
<textarea placeholder="enter content" [(ngModel)]="blog.content" name="content" id="content"></textarea>
<button type="submit">Add Blog</button>
</form>
------
import { Component } from '@angular/core';
import { NgForm } from '@angular/forms';
import { BlogService } from '../services/blog.service';

@Component({
  selector: 'app-addblog',
  templateUrl: './addblog.component.html',
  styleUrls: ['./addblog.component.css']
})
export class AddblogComponent {
  form!:NgForm;
  
  blog={
    id:null,
    title:"",
    content:""
  }
  constructor(private blogService:BlogService){}
  ngOnInit(){

  }
  addBlog(){
  this.blog.id=Date.now();
  this.blogService.addBlog(this.blog).subscribe(data=>{
    this.blog=data;
  });
  //this.form.reset();
  this.blog={
    id:null,
    title:"",
    content:""

  }
  

  }
}
